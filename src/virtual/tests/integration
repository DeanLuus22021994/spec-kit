# Integration tests for the Semantic Kernel application

import unittest

import httpx


class IntegrationTestCase(unittest.TestCase):

    @classmethod
    def setUpClass(cls):
        cls.base_url = "http://localhost:5000"
        cls.client = httpx.Client()

    @classmethod
    def tearDownClass(cls):
        cls.client.close()

    def test_example_integration(self):
        response = self.client.get(
            f"{self.base_url}/api/example"
        )
        self.assertEqual(response.status_code, 200)
        self.assertIn("expected_key", response.json())


if __name__ == "__main__":
    unittest.main()
