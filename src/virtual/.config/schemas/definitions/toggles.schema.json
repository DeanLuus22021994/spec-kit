{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "toggles.schema.json",
  "title": "Optimization Toggles Definitions",
  "definitions": {
    "toggle": {
      "type": "object",
      "properties": {
        "env_var": { "type": "string" },
        "default": { "type": ["string", "number", "boolean"] },
        "hot_reload": { "type": "boolean" },
        "description": { "type": "string" },
        "current_issue": { "type": "string" },
        "recommended": { "type": ["string", "number"] },
        "impact": { "type": "string" },
        "configuration_file": { "type": "string" },
        "usage": { "type": "string" },
        "warning": { "type": "string" },
        "benefits": { "type": "array", "items": { "type": "string" } },
        "tradeoffs": { "type": "array", "items": { "type": "string" } },
        "affects": { "type": "array", "items": { "type": "string" } },
        "configuration": { "type": "object" },
        "ports": { "type": "object" },
        "command": { "type": "string" },
        "current_usage_gb": { "type": "number" },
        "reclaimable_gb": { "type": "number" },
        "current_available": { "type": "number" },
        "pytorch_config": { "type": "string" }
      },
      "required": ["env_var", "description"]
    },
    "category": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "toggles": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["description", "toggles"]
    },
    "profile": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "toggles": { "type": "object", "additionalProperties": { "type": ["boolean", "string", "number"] } },
        "command": { "type": "string" }
      },
      "required": ["description", "toggles"]
    }
  }
}
