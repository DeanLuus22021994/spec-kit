{
  "name": "semantic-kernel-tests",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:frontend": "playwright test tests/e2e/frontend",
    "test:api": "playwright test tests/e2e/api",
    "test:auth": "playwright test tests/e2e/auth",
    "test:integration": "playwright test tests/e2e/integration",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:ci": "playwright test --reporter=html --reporter=junit",
    "report": "playwright show-report",
    "install:browsers": "playwright install --with-deps",
    "type-check": "tsc --noEmit",
    "lint": "eslint '**/*.ts' --max-warnings=0",
    "lint:fix": "eslint '**/*.ts' --fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "playwright": "^1.57.0",
    "typescript": "^5.3.0"
  }
}
