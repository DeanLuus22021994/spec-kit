{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/konveyor/kantra/schemas/report-schema.json",
  "title": "Validation Report Schema",
  "description": "JSON Schema for validation report format",
  "type": "object",
  "additionalProperties": false,
  "required": ["metadata", "summary", "incidents"],
  "definitions": {
    "category": {
      "type": "string",
      "enum": ["mandatory", "optional", "potential", "info"]
    },
    "incident": {
      "type": "object",
      "required": ["ruleID", "uri", "message", "category"],
      "additionalProperties": false,
      "properties": {
        "ruleID": { "type": "string" },
        "uri": { "type": "string" },
        "message": { "type": "string" },
        "category": { "$ref": "#/definitions/category" },
        "effort": { "type": "integer", "enum": [0, 1, 3, 5, 7, 13] },
        "lineNumber": { "type": "integer", "minimum": 1 },
        "columnNumber": { "type": "integer", "minimum": 1 },
        "snippet": { "type": "string", "description": "Code snippet causing the violation" },
        "variables": { "type": "object" },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["url", "title"],
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "title": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["timestamp", "status", "version"],
      "additionalProperties": false,
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "status": {
          "type": "string",
          "enum": ["success", "mandatory_violations", "optional_issues", "error"]
        },
        "exit_code": { "type": "integer" },
        "command": { "type": "array", "items": { "type": "string" } },
        "version": { "type": "string" },
        "duration_ms": { "type": "integer", "minimum": 0 },
        "environment": {
          "type": "object",
          "properties": {
            "os": { "type": "string" },
            "tool_version": { "type": "string" }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total_incidents", "by_category", "files_with_issues"],
      "additionalProperties": false,
      "properties": {
        "total_incidents": { "type": "integer", "minimum": 0 },
        "by_category": {
          "type": "object",
          "properties": {
            "mandatory": { "type": "integer", "minimum": 0 },
            "optional": { "type": "integer", "minimum": 0 },
            "potential": { "type": "integer", "minimum": 0 },
            "info": { "type": "integer", "minimum": 0 }
          }
        },
        "by_file": {
          "type": "object",
          "patternProperties": {
            ".*": { "type": "integer", "minimum": 0 }
          }
        },
        "files_with_issues": { "type": "integer", "minimum": 0 },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    },
    "incidents": {
      "type": "array",
      "items": { "$ref": "#/definitions/incident" }
    }
  },
  "examples": [
    {
      "metadata": {
        "timestamp": "2025-11-24T10:30:00Z",
        "status": "mandatory_violations",
        "exit_code": 1,
        "command": ["kantra", "analyze", "--input", ".", "--rules", "rules/"],
        "version": "1.0.0",
        "duration_ms": 1500,
        "environment": {
          "os": "linux",
          "tool_version": "1.2.3"
        }
      },
      "summary": {
        "total_incidents": 5,
        "by_category": {
          "mandatory": 3,
          "optional": 2,
          "potential": 0,
          "info": 0
        },
        "by_file": {
          "docker-compose.yml": 2,
          "semantic/embeddings/config.yml": 3
        },
        "files_with_issues": 2,
        "timestamp": "2025-11-24T10:30:01Z"
      },
      "incidents": [
        {
          "ruleID": "yaml-metadata-missing",
          "uri": "docker-compose.yml",
          "message": "Add metadata block at the top of the file",
          "category": "mandatory",
          "effort": 1,
          "lineNumber": 1,
          "snippet": "version: '3.8'"
        }
      ]
    }
  ]
}
