{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/konveyor/kantra/schemas/report-schema.json",
  "title": "Validation Report Schema",
  "description": "JSON Schema for validation report format",
  "type": "object",
  "required": ["metadata", "summary", "incidents"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["timestamp", "status", "version"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Report generation timestamp"
        },
        "status": {
          "type": "string",
          "enum": [
            "success",
            "mandatory_violations",
            "optional_issues",
            "error"
          ],
          "description": "Validation status"
        },
        "exit_code": {
          "type": "integer",
          "description": "Kantra exit code"
        },
        "command": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Kantra command executed"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Report format version"
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total_incidents", "by_category", "files_with_issues"],
      "properties": {
        "total_incidents": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of issues found"
        },
        "by_category": {
          "type": "object",
          "required": ["mandatory", "optional", "potential"],
          "properties": {
            "mandatory": {
              "type": "integer",
              "minimum": 0
            },
            "optional": {
              "type": "integer",
              "minimum": 0
            },
            "potential": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "by_file": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "integer",
              "minimum": 0
            }
          },
          "description": "Issue count by file path"
        },
        "files_with_issues": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of files with issues"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Summary generation timestamp"
        }
      }
    },
    "incidents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ruleID", "uri", "message", "category"],
        "properties": {
          "ruleID": {
            "type": "string",
            "description": "Rule identifier"
          },
          "uri": {
            "type": "string",
            "description": "File path or URI"
          },
          "message": {
            "type": "string",
            "description": "Violation message"
          },
          "category": {
            "type": "string",
            "enum": ["mandatory", "optional", "potential"],
            "description": "Severity category"
          },
          "effort": {
            "type": "integer",
            "enum": [0, 1, 3, 5, 7, 13],
            "description": "Remediation effort"
          },
          "lineNumber": {
            "type": "integer",
            "minimum": 1,
            "description": "Line number where issue occurs"
          },
          "variables": {
            "type": "object",
            "description": "Custom variables from rule"
          },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["url", "title"],
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri"
                },
                "title": {
                  "type": "string"
                }
              }
            },
            "description": "Documentation links"
          }
        }
      },
      "description": "List of validation incidents"
    }
  },
  "examples": [
    {
      "metadata": {
        "timestamp": "2025-11-24T10:30:00Z",
        "status": "mandatory_violations",
        "exit_code": 1,
        "command": ["kantra", "analyze", "--input", ".", "--rules", "rules/"],
        "version": "1.0.0"
      },
      "summary": {
        "total_incidents": 5,
        "by_category": {
          "mandatory": 3,
          "optional": 2,
          "potential": 0
        },
        "by_file": {
          "docker-compose.yml": 2,
          "semantic/embeddings/config.yml": 3
        },
        "files_with_issues": 2,
        "timestamp": "2025-11-24T10:30:01Z"
      },
      "incidents": [
        {
          "ruleID": "yaml-metadata-missing",
          "uri": "docker-compose.yml",
          "message": "Add metadata block at the top of the file",
          "category": "mandatory",
          "effort": 1,
          "lineNumber": 1
        }
      ]
    }
  ]
}
