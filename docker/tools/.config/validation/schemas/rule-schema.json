{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/konveyor/kantra/schemas/rule-schema.json",
  "title": "MTA Rules File Schema",
  "description": "JSON Schema for Migration Toolkit for Applications (MTA) rule definition files containing arrays of rules",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["ruleID", "description", "message"],
    "properties": {
      "ruleID": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$",
        "minLength": 3,
        "maxLength": 100,
        "description": "Unique rule identifier (lowercase, hyphens allowed)",
        "examples": ["yaml-metadata-missing", "indentation-inconsistent"]
      },
      "description": {
        "type": "string",
        "minLength": 10,
        "description": "Detailed rule description"
      },
      "labels": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1,
        "uniqueItems": true,
        "description": "Rule classification labels"
      },
      "when": {
        "type": "object",
        "description": "Condition for rule activation"
      },
      "message": {
        "type": "string",
        "minLength": 10,
        "description": "Message displayed when rule matches"
      },
      "effort": {
        "type": "integer",
        "enum": [0, 1, 3, 5, 7, 13],
        "description": "Remediation effort (Fibonacci scale)"
      },
      "category": {
        "type": "string",
        "enum": ["mandatory", "optional", "potential"],
        "description": "Rule severity category"
      },
      "customVariables": {
        "type": "array",
        "description": "Custom variables for dynamic messages"
      },
      "links": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["url"],
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "title": {
              "type": "string"
            }
          }
        },
        "description": "Documentation links"
      }
    }
  }
}
