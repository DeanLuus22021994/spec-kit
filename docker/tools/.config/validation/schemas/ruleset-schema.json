{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/konveyor/kantra/schemas/ruleset-schema.json",
  "title": "MTA Ruleset Schema",
  "description": "JSON Schema for MTA ruleset definitions",
  "type": "object",
  "required": ["metadata"],
  "additionalProperties": false,
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["name", "version"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "pattern": "^[a-z0-9-]+$" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "description": { "type": "string" },
        "profile": { "type": "string" },
        "generated": { "type": "boolean" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "author": { "type": "string" }
      }
    },
    "scope": {
      "type": "object",
      "properties": {
        "include": { "type": "array", "items": { "type": "string" } },
        "exclude": { "type": "array", "items": { "type": "string" } }
      }
    },
    "config_references": {
      "type": "array",
      "items": { "type": "string", "format": "uri-reference" }
    },
    "rules": {
      "type": "array",
      "items": { "type": "string" }
    },
    "rule_files": {
      "type": "array",
      "items": { "type": "string" }
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Other rulesets this one depends on"
    }
  }
}
