{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "resources.schema.json",
  "title": "Resource Definitions",
  "type": "object",
  "properties": {
    "cpus": {
      "oneOf": [
        { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?$" },
        { "type": "number" }
      ]
    },
    "memory": {
      "type": "string",
      "pattern": "^[0-9]+[KMG]?$"
    },
    "gpu": {
      "$ref": "gpu.schema.json#/definitions/gpu_resources"
    }
  }
}
